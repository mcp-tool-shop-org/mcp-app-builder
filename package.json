{
  "name": "mcp-app-builder",
  "displayName": "MCP App Builder",
  "description": "Build MCP servers with interactive UI components",
  "version": "0.1.0",
  "publisher": "mcp-tool-shop",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-tool-shop-org/mcp-app-builder"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "tools"
  ],
  "activationEvents": [
    "onCommand:mcp-app-builder.newServer",
    "workspaceContains:**/mcp.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcp-app-builder.newServer",
        "title": "MCP: New Server",
        "category": "MCP"
      },
      {
        "command": "mcp-app-builder.validateSchema",
        "title": "MCP: Validate Schema",
        "category": "MCP"
      },
      {
        "command": "mcp-app-builder.generateTypes",
        "title": "MCP: Generate Types",
        "category": "MCP"
      },
      {
        "command": "mcp-app-builder.testServer",
        "title": "MCP: Test Server",
        "category": "MCP"
      },
      {
        "command": "mcp-app-builder.openDashboard",
        "title": "MCP: Open Dashboard",
        "category": "MCP"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mcp-app-builder.newServer",
          "when": "true"
        },
        {
          "command": "mcp-app-builder.validateSchema",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "mcp-app-builder.generateTypes",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "mcp-app-builder.testServer",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "mcp-app-builder.openDashboard",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "configuration": {
      "title": "MCP App Builder",
      "properties": {
        "mcp-app-builder.defaultTemplate": {
          "type": "string",
          "default": "basic",
          "enum": ["basic", "with-ui", "full"],
          "description": "Default template for new MCP servers"
        },
        "mcp-app-builder.autoValidate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate schemas on save"
        },
        "mcp-app-builder.testPort": {
          "type": "number",
          "default": 3000,
          "description": "Port for the MCP test server"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "mcp.json",
        "url": "./schemas/mcp-config.schema.json"
      },
      {
        "fileMatch": "mcp-tools.json",
        "url": "./schemas/mcp-tools.schema.json"
      }
    ],
    "languages": [
      {
        "id": "mcp-json",
        "aliases": ["MCP Configuration"],
        "filenames": ["mcp.json", "mcp-tools.json"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  }
}
